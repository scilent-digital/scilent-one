{
  "name": "@scilent-one/db",
  "version": "0.1.0",
  "private": true,
  "description": "Prisma database client for the monorepo",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "typecheck": "tsc --noEmit",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@scilent-one/tooling": "workspace:*",
    "@types/node": "^25.0.3",
    "prisma": "^7.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3"
  }
}
