{
  "extends": "@repo/tooling/typescript/nextjs",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@repo/*": [
        "../../packages/*/src"
      ],
      "@repo/styles/*": [
        "../../packages/styles/*"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@/lib/utils": [
        "../../packages/ui/src/lib/utils"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build"
  ]
}
